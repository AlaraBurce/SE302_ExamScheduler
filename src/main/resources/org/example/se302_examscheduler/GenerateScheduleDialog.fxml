<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.SE302_ExamScheduler.GenerateScheduleController"
      spacing="10" padding="10">

    <children>
        <Label text="Generate Exam Schedule"/>

        <GridPane hgap="10" vgap="10">
            <children>
                <Label text="Start Date:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <DatePicker fx:id="startDatePicker" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="End Date:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <DatePicker fx:id="endDatePicker" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            </children>
        </GridPane>

        <Button text="Generate" onAction="#handleGenerate"/>

        <ProgressBar fx:id="progressBar" prefWidth="300"/>

        <Label text="Messages:"/>
        <TextArea fx:id="messageArea" editable="false" prefRowCount="6"/>
    </children>
</VBox>